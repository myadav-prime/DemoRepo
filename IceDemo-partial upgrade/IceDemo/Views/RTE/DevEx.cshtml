    <script type="text/javascript">
        var rteEditor, rteRoot, tracker;
        function fninit(s, e) {
            rteEditor = s;
            //rteRoot = $('iframe').contents().find('body[contenteditable=true]')[0]
            //rteRoot = rteEditor.GetDesignViewIFrameDocumentBody()
            //if (!!rteRoot) {
